# Flask Configuration
FLASK_SECRET_KEY=your_secure_secret_key_here
FLASK_ENV=production

# Application Configuration
PYTHONPATH=/app
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860

# Redis Configuration (optional)
